{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es5", "es2015", "es2017"],
    "target": "esnext",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"],
      "@config/*": ["./config/*"]
    }
  },
  "include": ["*.*"],
  "exclude": ["node_modules"]
}
